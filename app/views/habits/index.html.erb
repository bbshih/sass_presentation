<h1>Be Awesome</h1>
<h2>Track your habits</h2>
<p>
  The number 1 site for becoming and staying awesome.
</p>

<table class='radius'>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Completed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @habits.each do |habit| %>
  <tr>
    <td><%= habit.name %></td>
    <td><%= habit.description %></td>
    <td><%= habit.completed %></td>
    <td><%= link_to 'Show', habit %></td>
    <td><%= link_to 'Edit', edit_habit_path(habit) %></td>
    <td><%= link_to 'Destroy', habit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New Habit', new_habit_path %> <br />

